---
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'

import Player from '@/components/bento/Player'
import PhaserGame from '@/components/ui/phaser'
---

<Layout title="Home" description={SITE.DESCRIPTION}>
  <html>
    <head>
      <script is:inline src="/bundle.min.js" defer></script>
      <!-- <script src="https://unpkg.com/wavesurfer.js"></script> -->
      <!-- Phaser 게임 번들 -->
      <link rel="stylesheet" href="styles/snow.css" />
    </head>
    <body>
      <section class="mx-auto max-w-[800px] px-4" aria-label="Phaser Game">
        <PhaserGame />
        <!-- 게임 -->
      </section>
    </body>
  </html>

  <section class="mx-auto flex max-w-[800px] justify-start">
    <Player client:load />
  </section>
  <section
    class="mx-auto grid max-w-[800px] grid-cols-1 gap-4 px-16 [grid-template-areas:'a'_'b'_'c'_'d'_'e'_'f'_'g'_'h'_'i'_'j'_'k'] sm:grid-cols-2 sm:[grid-template-areas:'a_a'_'b_d'_'e_e'_'j_g'_'h_i'_'h_c'_'k_c'_'f_f'] xl:grid-cols-3 xl:[grid-template-areas:'a_a_b_c'_'d_e_e_c'_'h_f_f_g'_'h_i_j_k']"
  >
    <div
      class="has-overlay relative flex aspect-square max-w-[340px] items-center justify-center rounded-xl [grid-area:i]"
    >
    </div>
  </section>
</Layout>
